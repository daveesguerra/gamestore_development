<% @page_title = 'Order List' %>
<h2><%= @page_title %></h2>
<div id="count"><%= pluralize(@orders.size, 'order') %> found</div> <%= link_to('Add Order', {:action => 'new'},{:class => 'add-new'}) %><br />
<table class="list">
  <tr>
    <th>Order</th>
    <th>Invoice Number</th>
    <th>Customer</th>
    <th>Actions</th>
  </tr>
  <% for order in @orders -%>
    <tr>
      <td><%= order.id %></td>
      <td><%= link_to(order.invoice_number, {:action => 'show', :id => order.id}) %></td>
      <td><%= order.customer.first_name+' '+order.customer.last_name %></td>
      <td><%= link_to('Edit', {:action => 'edit', :id => order.id}) %> | <%= link_to('Delete', {:action => 'delete', :id => order.id}) %></td>
    </tr>
  <% end -%>
</table>



