<% @page_title = 'Edit User' %>
<h2><%= @page_title %></h2>
<% form_for(:user, :url => {:action => 'update', :id => @user.id}) do |f| %>
    <%= render (:partial => 'form', :locals => {:f => f}) %>
    <%= submit_tag("Update User") %> | <%= link_to('Back', {:action => 'list'}, {:class => 'back-button'}) %>
<% end %>
