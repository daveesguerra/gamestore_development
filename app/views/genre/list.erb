<% @page_title = 'Genre List' %>
<h2><%= @page_title %></h2>
<div id="count"><%= pluralize(@genres.size, 'genre') %> found</div> <%= link_to('Add Genre', {:action => 'new'},{:class => 'add-new'}) %><br />
<table class="list">
  <tr>
    <th>Genres</th>
    <th>Actions</th>
  </tr>
  <% for genre in @genres -%>
    <tr>
      <td><%= link_to(genre.genre, {:action => 'show', :id => genre.id}) %></td>
      <td><%= link_to('Edit', {:action => 'edit', :id => genre.id}) %> | <%= link_to('Delete', {:action => 'delete', :id => genre.id}) %></td>
    </tr>
  <% end -%>
</table>



